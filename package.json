  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -b --watch",
    "format": "prettier --write \"src/**/*.*[jt]s*\"",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules --experimental-import-meta-resolve\" jest --config=jest.cjs --coverage=false",
