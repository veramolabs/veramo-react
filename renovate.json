{
  "extends": ["config:base", "group:allNonMajor"],
  "labels": ["maintenance"],
  "automergeType": "branch",
  "automerge": true,
  "packageRules": [
    {
      "packagePatterns": ["veramo"],
      "groupName": "veramo-next-dependencies",
      "matchBaseBranches": ["next"],
      "respectLatest": false,
      "followTag": "next"
    },
    {
      "matchDepTypes": ["devDependencies"],
      "groupName": "devDeps",
      "schedule": ["before 5am on Monday"]
    }
  ]
}
